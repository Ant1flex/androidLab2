<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/dark">

    <Button
        android:id="@+id/lengthBtn"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="@string/lengthBtn"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        />

    <Button
        android:id="@+id/weightBtn"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="@string/weightBtn"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lengthBtn"
        />

    <Button
        android:id="@+id/temperatureBtn"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="@string/temperatureBtn"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/weightBtn"
        />

    <TextView
        android:id="@+id/info"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/studentInfo"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/temperatureBtn"
        android:layout_marginTop="200dp"
        />

</RelativeLayout>